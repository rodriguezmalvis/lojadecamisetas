<% if flash[:notice] %>
<div class="alert alert-success" role="alert"><%= flash[:notice] %></div>
<% end %>

<%= link_to "Cadastrar Novo Produto", new_produto_path%>
<br>
<br>

<table class="table table-bordered">
    <thead>
        <tr>
            <th>Nome</th>
            <th>Descrição</th>
            <th>Preço</th>
            <th>Quantidade</th>            
        </tr>
    </thead>
    <tbody>
        <% @produtos_por_nome.each do |produto| %>
        <tr>
            <td><%= produto.nome %></td>
            <td><%= produto.descricao %></td>
            <td><%= produto.quantidade %></td>
            <td><%= produto.preco %></td>
            <td><%= button_to "Remover" , produto, method: :delete, class: "btn btn-danger" , data: {confirm: "Tem certeza que deseja remover #{produto.nome}?"} %></td>
        </tr>
        <% end %>
    </tbody>
</table>

<table class="table table-bordered">
    <thead>
        <tr>
            <th>Nome</th>
            <th>Descrição</th>
            <th>Preço</th>
            <th>Quantidade</th>            
        </tr>
    </thead>
    <tbody>
        <% @produtos_por_preco.each do |produto| %>
        <tr>
            <td><%= produto.nome %></td>
            <td><%= produto.descricao %></td>
            <td><%= produto.quantidade %></td>
            <td><%= produto.preco %></td>
        </tr>
        <% end %>
    </tbody>
</table>

